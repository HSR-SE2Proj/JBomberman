<?xml version="1.0" encoding="UTF-8"?>
<project name="JBomberman" basedir="." xmlns:jacoco="antlib:org.jacoco.ant">
   <description>
        Build File for JBomberman
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="bin" location="bin"/>
  <property name="build.test.dir" location="build/tests" />
  <property name="dist"  location="dist"/>
  <property name="test.dir" location="src/tests" />
 <property name="report.dir" location="reports" />

	<path id="jbomberman.classpath">
        <pathelement location="${build}"/>
        <pathelement location="lib/junit-4.12.jar"/>
        <pathelement location="lib/hamcrest-core-1.3.jar"/>
    </path>
 	
	
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
    <mkdir dir="${build.test.dir}" />
    <mkdir dir="${test.report.dir}" />
  </target>
  <target name="compile" depends="init" description="compile the source " >
      
    <!-- Compile the java code from ${src} into ${build} -->
   <javac includeantruntime="false" srcdir="${src}" destdir="${build}">
        <classpath refid="jbomberman.classpath" />
  </javac>
  </target>

  <target name="dist" depends="compile" description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/JBomberman-${DSTAMP}.jar" basedir="${build}"/>
  </target>

  <target name="clean" description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
	<target name="junit" depends="compile">
		<junit printsummary="on" fork="no" haltonfailure="no">
			<classpath refid="jbomberman.classpath"/>
			<formatter type="xml" />
			<test name="tests.TestClass" todir="${report.dir}/junit"/>
		</junit>
	</target>
	
	 
	   <target name="findbugs" depends="dist">
	    <taskdef name="findbugs" classpath="findbugs/lib/findbugs-ant.jar" classname="edu.umd.cs.findbugs.anttask.FindBugsTask"/>    
    <findbugs home="findbugs/"
              output="xml"
              outputFile="${report.dir}/findbugs/findbugs.xml" >
      <auxClasspath refid="jbomberman.classpath"/>
      <sourcePath path="${src}" />
      <class location="dist/JBomberman.jar" />
    </findbugs>
  </target>
	  
	
  
</project>